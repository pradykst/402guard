{
  "name": "402guard-root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:client": "cd packages/client && bun run build",
    "build:server": "cd packages/server && bun run build",
    "build:subs": "cd packages/subscriptions && bun run build",
    "build": "bun run build:client && bun run build:server && bun run build:subs",
    "dev:web": "cd apps/web && bun dev"
  },
  "devDependencies": {
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
